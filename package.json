{
  "name": "meadow-mesh",
  "version": "0.0.1",
  "description": "Hop, skip, and jump to intuitive interfaces with Meadow Mesh 🐰🥕",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:components": "pnpm -r --filter @meadow-mesh/components dev",
    "build:components": "pnpm -r --filter @meadow-mesh/components build",
    "dev:docs": "pnpm -r --filter @meadow-mesh/docs dev",
    "build:docs": "pnpm -r --filter @meadow-mesh/docs build",
    "build:tokens": "pnpm -r --filter @meadow-mesh/tokens build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  }
}
